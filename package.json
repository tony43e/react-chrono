{
  "name": "react-chrono",
  "version": "1.3.3",
  "license": "MIT",
  "description": "A Modern Timeline component for React",
  "keywords": [
    "timeline",
    "react-timeline",
    "horizontal-timeline",
    "vertical-timeline"
  ],
  "author": "Prabhu Murthy",
  "repository": {
    "url": "https://github.com/prabhuignoto/react-chrono",
    "type": "git"
  },
  "scripts": {
    "build": "snowpack build",
    "eslint": "eslint ./src/**/*.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:css": "stylelint ./src/**/*style.ts",
    "rollup": "rimraf ./dist && rollup -c",
    "start": "snowpack dev --polyfill-node",
    "test": "web-test-runner \"src/**/*.test.tsx\"",
    "lint:all": "yarn run eslint && yarn run lint:css && yarn run lint",
    "cypress": "cypress open"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "nanoid": "^3.1.16",
    "use-debounce": "^5.0.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-optional-chaining": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@snowpack/app-scripts-react": "^1.12.5",
    "@snowpack/plugin-dotenv": "^2.0.4",
    "@snowpack/plugin-react-refresh": "^2.3.4",
    "@snowpack/plugin-typescript": "^1.0.2",
    "@snowpack/web-test-runner-plugin": "^0.1.3",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^14.14.5",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.0",
    "@types/snowpack-env": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-loader": "^8.1.0",
    "cssnano": "^4.1.10",
    "cypress": "^5.5.0",
    "eslint": "^7.12.1",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "prettier": "^2.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-typescript2": "^0.28.0",
    "snowpack": "^2.15.1",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.1.1",
    "**/@typescript-eslint/parser": "^4.1.1"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "src/components/**/*.{ts,tsx}": [
      "prettier --format \"src/**/*.{js,jsx,ts,tsx}\"",
      "stylelint ./src/**/*style.ts",
      "eslint ./src/**/*.tsx",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "main": "dist/react-chrono.js",
  "module": "dist/react-chrono.esm.js",
  "umd": "dist/react-chrono.umd.js"
}
