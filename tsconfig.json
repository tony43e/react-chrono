{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "es2019"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true,
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src/components", "src/models"],
  "exclude": ["src/**/*.test.tsx", "node_modules", "dist", "rollup.config.js"],
  "files": ["src/react-chrono.ts"]
}
