{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "types": [
      "node",
      "@types/testing-library__jest-dom",
    ]
  },
  "include": [
    "src/components",
    "src/models"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.mjs",
    "cypress",
    "cypress.config.ts"
  ],
  "files": [
    "src/react-chrono.ts"
  ]
}